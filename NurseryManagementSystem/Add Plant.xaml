<Window x:Class="NurseryManagementSystem.Add_Plant"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NurseryManagementSystem"
        mc:Ignorable="d"
        Title="Add_Plant" Height="450" Width="480">
    <Window.Background>
        <ImageBrush ImageSource="7782172.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <TextBox x:Name="name" HorizontalAlignment="Left" Height="23" Margin="198,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" BorderBrush="#FF008306" BorderThickness="1,1,3,3"/>
        <Label Content="Enter Name" HorizontalAlignment="Left" Margin="90,91,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Segoe UI Black" FontSize="16"/>
        <TextBox x:Name="type" HorizontalAlignment="Left" Height="23" Margin="198,156,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="172" BorderBrush="#FF008306" BorderThickness="1,1,3,3"/>
        <Label Content="Enter Type" HorizontalAlignment="Left" Margin="90,148,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Segoe UI Black" FontSize="16"/>
        <TextBox x:Name="price" HorizontalAlignment="Left" Height="23" Margin="198,219,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="172" BorderBrush="#FF008306" BorderThickness="1,1,3,3"/>
        <Label Content="Enter Price" HorizontalAlignment="Left" Margin="90,220,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Segoe UI Black" FontSize="16"/>
        <Button x:Name="exit" Content="Exit" HorizontalAlignment="Left" Margin="90,345,0,0" VerticalAlignment="Top" Width="75" Click="exit_Click" Background="White" BorderBrush="#FF008306" BorderThickness="1,1,3,3"/>
        <Button x:Name="add" Content="Add" HorizontalAlignment="Left" Margin="295,290,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="1.677,0.149" Click="add_Click" Background="White" BorderBrush="#FF008306" BorderThickness="1,1,3,3" />
        <Button x:Name="cancelbtn" Content="Cancel" HorizontalAlignment="Left" Margin="198,290,0,0" VerticalAlignment="Top" Width="75" Click="cancelbtn_Click" Background="White" BorderBrush="#FF008306" BorderThickness="1,1,3,3"/>

    </Grid>
</Window>
